def get_fMOST_ids(model_species="mouse"):
    if model_species == "mouse":
        url = "http://bap.cebsit.ac.cn/data"
    elif model_species == "monkey":
        url = "http://bap.cebsit.ac.cn/monkeydata/"
    
    response = requests.get(url)

    # Check if the request was successful
    if response.status_code == 200:
        # Parse the HTML content of the page
        soup = BeautifulSoup(response.text, "html.parser")
        
        # Find all <a> tags (links) in the page
        links = soup.find_all("a")
        
        # Extract sample IDs (ignoring those like "../" or "@eaDir/")
        fMOST_id = [
            link.text.strip("/")
            for link in links
            if link.text.strip("/") not in ("..", "@eaDir") and link.text.endswith("/")
        ]
        return fMOST_id
        